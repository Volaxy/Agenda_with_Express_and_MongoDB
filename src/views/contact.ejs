<%- include("includes/head"); %>

<%- include("includes/nav"); %>

<div class="container">
    <div class="row">
        <div class="col-l-2"></div>
        
        <div class="col-l-8 my-5">
            <h1 class="text-center">Contact</h1>
            <p class="text-center lead">Create or edit your contact below</p>

            <%- include("includes/messages"); %>

            <form action="/contact/register" method="post">
                <input type="hidden" name="_csrf" value=<%=  %> >

                <div class="mb-3">
                    <label>First name</label>
                    <input type="text" class="form-control" name="firstName" value="<%= contact.firstName %>">
                </div>

                <div class="mb-3">
                    <label>Last name</label>
                    <input type="text" class="form-control" name="lastName" value="<%= contact.lastName %>">
                </div>

                <div class="mb-3">
                    <label>E-mail</label>
                    <input type="email" class="form-control" name="email" value="<%= contact.email %>">
                </div>

                <div class="mb-3">
                    <label>Telephone</label>
                    <input type="tel" class="form-control" name="telephone" value="<%= contact.phonenumber %>">
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
        
        <div class="col-l-2"></div>
    </div>
</div>

<%- include("includes/footer"); %>